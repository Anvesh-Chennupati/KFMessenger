<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
        <solid android:color="#2fff00"/>
        <corners android:radius="75dp"/>
        <stroke
                android:width="2dip"
                android:color="#ffffff" />
        <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#157300"/>
            <corners android:radius="75dp"/>
            <stroke
                    android:width="2dip"
                    android:color="#ffffff" />
            <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
        </shape>
    </item>

</selector>